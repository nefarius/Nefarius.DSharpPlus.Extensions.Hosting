<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <Description>DSharpPlus UNOFFICIAL Microsoft.Extensions.DependencyInjection integration.</Description>
        <Version>1.0.0</Version>
    </PropertyGroup>

    <ItemGroup>
        <Compile Remove="Generators\**"/>
